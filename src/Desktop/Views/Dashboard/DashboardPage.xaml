<!--
═══════════════════════════════════════════════════════════════════════════════
  Live x Shop Pro - Dashboard Page
  หน้าแดชบอร์ดแสดงภาพรวมการขายและสถิติ
  พัฒนาโดย Xman Studio
═══════════════════════════════════════════════════════════════════════════════
-->
<Page x:Class="LiveXShopPro.Desktop.Views.Dashboard.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:LiveXShopPro.Desktop.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Background="Transparent"
      Title="Dashboard">

    <d:Page.DataContext>
        <vm:DashboardViewModel/>
    </d:Page.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0,0,0,24">
            <Grid.RowDefinitions>
                <!-- สถิติหลัก -->
                <RowDefinition Height="Auto"/>
                <!-- งานรอดำเนินการ -->
                <RowDefinition Height="Auto"/>
                <!-- กราฟและข้อมูล -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <!-- Row 1: สถิติหลัก 4 ช่อง -->
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ยอดขายวันนี้ -->
                <Border Grid.Column="0"
                       Style="{StaticResource GlassCard}"
                       Margin="0,0,12,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="ยอดขายวันนี้"
                                      FontFamily="{StaticResource SarabunRegular}"
                                      FontSize="13"
                                      Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Text="{Binding TodaySalesFormatted}"
                                      FontFamily="{StaticResource SarabunBold}"
                                      FontSize="28"
                                      Foreground="{StaticResource TextPrimary}"
                                      Margin="0,4,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <md:PackIcon Kind="{Binding IsSalesUp, Converter={StaticResource BoolToArrowIconConverter}}"
                                            Width="14" Height="14"
                                            Foreground="{Binding IsSalesUp, Converter={StaticResource BoolToColorConverter}}"
                                            VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SalesChangePercent, StringFormat={}{0}%}"
                                          FontFamily="{StaticResource SarabunMedium}"
                                          FontSize="12"
                                          Foreground="{Binding IsSalesUp, Converter={StaticResource BoolToColorConverter}}"
                                          Margin="4,0,0,0"/>
                                <TextBlock Text="จากเมื่อวาน"
                                          FontFamily="{StaticResource SarabunRegular}"
                                          FontSize="11"
                                          Foreground="{StaticResource TextDisabled}"
                                          Margin="6,0,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1"
                               Background="{StaticResource PrimaryBrush}"
                               Opacity="0.15"
                               CornerRadius="12"
                               Width="56" Height="56">
                            <md:PackIcon Kind="CurrencyUsd"
                                        Width="28" Height="28"
                                        Foreground="{StaticResource PrimaryBrush}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- จำนวนออเดอร์ -->
                <Border Grid.Column="1"
                       Style="{StaticResource GlassCard}"
                       Margin="6,0,6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="ออเดอร์วันนี้"
                                      FontFamily="{StaticResource SarabunRegular}"
                                      FontSize="13"
                                      Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Text="{Binding TodayOrders}"
                                      FontFamily="{StaticResource SarabunBold}"
                                      FontSize="28"
                                      Foreground="{StaticResource TextPrimary}"
                                      Margin="0,4,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding OrderChangePercent, StringFormat=+{0}%}"
                                          FontFamily="{StaticResource SarabunMedium}"
                                          FontSize="12"
                                          Foreground="{StaticResource Success}"
                                          Margin="0,0,6,0"/>
                                <TextBlock Text="จากเมื่อวาน"
                                          FontFamily="{StaticResource SarabunRegular}"
                                          FontSize="11"
                                          Foreground="{StaticResource TextDisabled}"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1"
                               Background="{StaticResource SecondaryBrush}"
                               Opacity="0.15"
                               CornerRadius="12"
                               Width="56" Height="56">
                            <md:PackIcon Kind="ClipboardCheck"
                                        Width="28" Height="28"
                                        Foreground="{StaticResource SecondaryBrush}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- ลูกค้าใหม่ -->
                <Border Grid.Column="2"
                       Style="{StaticResource GlassCard}"
                       Margin="6,0,6,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="ลูกค้าใหม่"
                                      FontFamily="{StaticResource SarabunRegular}"
                                      FontSize="13"
                                      Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Text="{Binding NewCustomersToday}"
                                      FontFamily="{StaticResource SarabunBold}"
                                      FontSize="28"
                                      Foreground="{StaticResource TextPrimary}"
                                      Margin="0,4,0,0"/>
                            <TextBlock Text="คนในวันนี้"
                                      FontFamily="{StaticResource SarabunRegular}"
                                      FontSize="11"
                                      Foreground="{StaticResource TextDisabled}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1"
                               Background="{StaticResource Success}"
                               Opacity="0.15"
                               CornerRadius="12"
                               Width="56" Height="56">
                            <md:PackIcon Kind="AccountPlus"
                                        Width="28" Height="28"
                                        Foreground="{StaticResource Success}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- มูลค่าเฉลี่ย -->
                <Border Grid.Column="3"
                       Style="{StaticResource GlassCard}"
                       Margin="12,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="มูลค่าเฉลี่ย/ออเดอร์"
                                      FontFamily="{StaticResource SarabunRegular}"
                                      FontSize="13"
                                      Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Text="{Binding AverageOrderValueFormatted}"
                                      FontFamily="{StaticResource SarabunBold}"
                                      FontSize="28"
                                      Foreground="{StaticResource TextPrimary}"
                                      Margin="0,4,0,0"/>
                            <TextBlock Text="ต่อออเดอร์"
                                      FontFamily="{StaticResource SarabunRegular}"
                                      FontSize="11"
                                      Foreground="{StaticResource TextDisabled}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>

                        <Border Grid.Column="1"
                               Background="{StaticResource Warning}"
                               Opacity="0.15"
                               CornerRadius="12"
                               Width="56" Height="56">
                            <md:PackIcon Kind="ChartLineVariant"
                                        Width="28" Height="28"
                                        Foreground="{StaticResource Warning}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <!-- Row 2: งานรอดำเนินการ 5 ช่อง -->
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CF รอดำเนินการ -->
                <Button Grid.Column="0"
                       Style="{StaticResource GlassButton}"
                       Command="{Binding GoToPendingCFCommand}"
                       Margin="0,0,8,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding PendingCF}"
                                  FontFamily="{StaticResource SarabunBold}"
                                  FontSize="32"
                                  Foreground="{StaticResource PrimaryBrush}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="CF รอดำเนินการ"
                                  FontFamily="{StaticResource SarabunRegular}"
                                  FontSize="12"
                                  Foreground="{StaticResource TextSecondary}"
                                  HorizontalAlignment="Center"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- รอยืนยัน -->
                <Button Grid.Column="1"
                       Style="{StaticResource GlassButton}"
                       Margin="4,0,4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding PendingConfirmation}"
                                  FontFamily="{StaticResource SarabunBold}"
                                  FontSize="32"
                                  Foreground="{StaticResource Warning}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="รอยืนยัน"
                                  FontFamily="{StaticResource SarabunRegular}"
                                  FontSize="12"
                                  Foreground="{StaticResource TextSecondary}"
                                  HorizontalAlignment="Center"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- สลิปรอตรวจ -->
                <Button Grid.Column="2"
                       Style="{StaticResource GlassButton}"
                       Command="{Binding GoToPendingSlipsCommand}"
                       Margin="4,0,4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding PendingSlips}"
                                  FontFamily="{StaticResource SarabunBold}"
                                  FontSize="32"
                                  Foreground="{StaticResource Info}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="สลิปรอตรวจ"
                                  FontFamily="{StaticResource SarabunRegular}"
                                  FontSize="12"
                                  Foreground="{StaticResource TextSecondary}"
                                  HorizontalAlignment="Center"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- รอแพ็ค -->
                <Button Grid.Column="3"
                       Style="{StaticResource GlassButton}"
                       Command="{Binding GoToPendingPackingCommand}"
                       Margin="4,0,4,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding PendingPacking}"
                                  FontFamily="{StaticResource SarabunBold}"
                                  FontSize="32"
                                  Foreground="{StaticResource SecondaryBrush}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="รอแพ็ค"
                                  FontFamily="{StaticResource SarabunRegular}"
                                  FontSize="12"
                                  Foreground="{StaticResource TextSecondary}"
                                  HorizontalAlignment="Center"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- รอส่ง -->
                <Button Grid.Column="4"
                       Style="{StaticResource GlassButton}"
                       Margin="8,0,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="{Binding PendingShipment}"
                                  FontFamily="{StaticResource SarabunBold}"
                                  FontSize="32"
                                  Foreground="{StaticResource Success}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="รอส่ง"
                                  FontFamily="{StaticResource SarabunRegular}"
                                  FontSize="12"
                                  Foreground="{StaticResource TextSecondary}"
                                  HorizontalAlignment="Center"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <!-- Row 3: ออเดอร์ล่าสุด & สินค้าขายดี -->
            <!-- ═══════════════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ออเดอร์ล่าสุด -->
                <Border Grid.Column="0"
                       Style="{StaticResource GlassCard}"
                       Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="ออเดอร์ล่าสุด"
                                      FontFamily="{StaticResource SarabunBold}"
                                      FontSize="16"
                                      Foreground="{StaticResource TextPrimary}"/>
                            <Button Content="ดูทั้งหมด"
                                   Style="{StaticResource TextLinkButton}"
                                   HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- List -->
                        <ItemsControl Grid.Row="1"
                                     ItemsSource="{Binding RecentOrders}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundDark}"
                                           CornerRadius="8"
                                           Padding="12"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding OrderNumber}"
                                                          FontFamily="{StaticResource SarabunMedium}"
                                                          FontSize="14"
                                                          Foreground="{StaticResource PrimaryBrush}"/>
                                                <TextBlock Text="{Binding CustomerName}"
                                                          FontFamily="{StaticResource SarabunRegular}"
                                                          FontSize="13"
                                                          Foreground="{StaticResource TextPrimary}"
                                                          Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <Border Background="{StaticResource Warning}"
                                                           Opacity="0.2"
                                                           CornerRadius="4"
                                                           Padding="6,2">
                                                        <TextBlock Text="{Binding Status}"
                                                                  FontFamily="{StaticResource SarabunMedium}"
                                                                  FontSize="11"
                                                                  Foreground="{StaticResource Warning}"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding TimeAgo}"
                                                              FontFamily="{StaticResource SarabunRegular}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextDisabled}"
                                                              VerticalAlignment="Center"
                                                              Margin="8,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                      Text="{Binding AmountFormatted}"
                                                      FontFamily="{StaticResource SarabunBold}"
                                                      FontSize="16"
                                                      Foreground="{StaticResource Success}"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- สินค้าขายดี -->
                <Border Grid.Column="1"
                       Style="{StaticResource GlassCard}"
                       Margin="12,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="สินค้าขายดี"
                                      FontFamily="{StaticResource SarabunBold}"
                                      FontSize="16"
                                      Foreground="{StaticResource TextPrimary}"/>
                            <Button Content="ดูทั้งหมด"
                                   Style="{StaticResource TextLinkButton}"
                                   HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- List -->
                        <ItemsControl Grid.Row="1"
                                     ItemsSource="{Binding TopProducts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundDark}"
                                           CornerRadius="8"
                                           Padding="12"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ProductName}"
                                                          FontFamily="{StaticResource SarabunMedium}"
                                                          FontSize="14"
                                                          Foreground="{StaticResource TextPrimary}"/>
                                                <TextBlock Text="{Binding SKU}"
                                                          FontFamily="{StaticResource SarabunRegular}"
                                                          FontSize="12"
                                                          Foreground="{StaticResource TextSecondary}"
                                                          Margin="0,2,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <md:PackIcon Kind="ShoppingCart"
                                                                Width="12" Height="12"
                                                                Foreground="{StaticResource TextDisabled}"
                                                                VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding SoldCount, StringFormat=ขายแล้ว {0} ชิ้น}"
                                                              FontFamily="{StaticResource SarabunRegular}"
                                                              FontSize="11"
                                                              Foreground="{StaticResource TextDisabled}"
                                                              Margin="4,0,0,0"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding RevenueFormatted}"
                                                          FontFamily="{StaticResource SarabunBold}"
                                                          FontSize="16"
                                                          Foreground="{StaticResource Success}"
                                                          HorizontalAlignment="Right"/>
                                                <TextBlock Text="รายได้"
                                                          FontFamily="{StaticResource SarabunRegular}"
                                                          FontSize="10"
                                                          Foreground="{StaticResource TextDisabled}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>

</Page>
