<!--
═══════════════════════════════════════════════════════════════════════════════
  Live x Shop Pro - Live Session Page
  หน้าจัดการการถ่ายทอดสดและดึงแชท
  พัฒนาโดย Xman Studio
═══════════════════════════════════════════════════════════════════════════════
-->
<Page x:Class="LiveXShopPro.Desktop.Views.Live.LivePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Background="Transparent"
      Title="Live Session">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Control Panel -->
            <ColumnDefinition Width="350"/>
            <!-- Live Chat Preview -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════════════ -->
        <!-- Control Panel - ควบคุมการ Live -->
        <!-- ═══════════════════════════════════════════════════════════════════════ -->
        <Border Grid.Column="0"
               Style="{StaticResource GlassCard}"
               Margin="0,0,12,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- หัวข้อ -->
                    <TextBlock Text="ควบคุมการ Live"
                              FontFamily="{StaticResource SarabunBold}"
                              FontSize="18"
                              Foreground="{StaticResource TextPrimary}"
                              Margin="0,0,0,16"/>

                    <!-- สถานะ Live -->
                    <Border x:Name="LiveStatusCard"
                           Background="{StaticResource BackgroundDark}"
                           CornerRadius="12"
                           Padding="16"
                           Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Live Indicator -->
                            <Border Grid.Column="0"
                                   x:Name="LiveIndicator"
                                   Width="12" Height="12"
                                   CornerRadius="6"
                                   Background="{StaticResource Error}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="LiveStatusText"
                                          Text="ยังไม่ได้เริ่ม Live"
                                          FontFamily="{StaticResource SarabunMedium}"
                                          FontSize="14"
                                          Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock x:Name="LiveDurationText"
                                          Text=""
                                          FontFamily="{StaticResource SarabunRegular}"
                                          FontSize="12"
                                          Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- เลือก Platform -->
                    <TextBlock Text="เลือก Platform"
                              FontFamily="{StaticResource SarabunMedium}"
                              FontSize="13"
                              Foreground="{StaticResource TextSecondary}"
                              Margin="0,0,0,8"/>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Facebook -->
                        <RadioButton Grid.Column="0"
                                    x:Name="PlatformFacebook"
                                    Style="{StaticResource NavButton}"
                                    GroupName="Platform"
                                    IsChecked="True"
                                    Margin="0,0,4,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <md:PackIcon Kind="Facebook" Width="20" Height="20"
                                            Foreground="#1877F2" Margin="0,0,6,0"/>
                                <TextBlock Text="Facebook" FontSize="12"/>
                            </StackPanel>
                        </RadioButton>

                        <!-- TikTok -->
                        <RadioButton Grid.Column="1"
                                    x:Name="PlatformTikTok"
                                    Style="{StaticResource NavButton}"
                                    GroupName="Platform"
                                    Margin="2,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <md:PackIcon Kind="Music" Width="20" Height="20"
                                            Foreground="#EE1D52" Margin="0,0,6,0"/>
                                <TextBlock Text="TikTok" FontSize="12"/>
                            </StackPanel>
                        </RadioButton>

                        <!-- LINE -->
                        <RadioButton Grid.Column="2"
                                    x:Name="PlatformLine"
                                    Style="{StaticResource NavButton}"
                                    GroupName="Platform"
                                    Margin="4,0,0,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <md:PackIcon Kind="Chat" Width="20" Height="20"
                                            Foreground="#06C755" Margin="0,0,6,0"/>
                                <TextBlock Text="LINE" FontSize="12"/>
                            </StackPanel>
                        </RadioButton>
                    </Grid>

                    <!-- ชื่อ Live Session -->
                    <TextBlock Text="ชื่อ Live Session"
                              FontFamily="{StaticResource SarabunMedium}"
                              FontSize="13"
                              Foreground="{StaticResource TextSecondary}"
                              Margin="0,0,0,8"/>

                    <TextBox x:Name="LiveTitleInput"
                            Style="{StaticResource GlassTextBox}"
                            md:HintAssist.Hint="เช่น ไลฟ์เปิดกล่องสินค้าใหม่"
                            Margin="0,0,0,16"/>

                    <!-- URL ถ่ายทอดสด -->
                    <TextBlock Text="URL ถ่ายทอดสด"
                              FontFamily="{StaticResource SarabunMedium}"
                              FontSize="13"
                              Foreground="{StaticResource TextSecondary}"
                              Margin="0,0,0,8"/>

                    <TextBox x:Name="StreamUrlInput"
                            Style="{StaticResource GlassTextBox}"
                            md:HintAssist.Hint="วาง URL ของ Live (Facebook/TikTok)"
                            Margin="0,0,0,16"/>

                    <!-- ปุ่มเริ่ม/หยุด Live -->
                    <Button x:Name="StartLiveButton"
                           Style="{StaticResource PrimaryButton}"
                           Margin="0,0,0,8"
                           Click="OnStartLiveClicked">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Broadcast" Width="20" Height="20" Margin="0,0,8,0"/>
                            <TextBlock Text="เริ่มดึงแชท"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="StopLiveButton"
                           Style="{StaticResource SecondaryButton}"
                           Visibility="Collapsed"
                           Click="OnStopLiveClicked">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Stop" Width="20" Height="20" Margin="0,0,8,0"/>
                            <TextBlock Text="หยุดดึงแชท"/>
                        </StackPanel>
                    </Button>

                    <!-- สถิติ Live -->
                    <Border Background="{StaticResource BackgroundDark}"
                           CornerRadius="12"
                           Padding="16"
                           Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="สถิติ Live"
                                      FontFamily="{StaticResource SarabunBold}"
                                      FontSize="14"
                                      Foreground="{StaticResource TextPrimary}"
                                      Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- แชททั้งหมด -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,12">
                                    <TextBlock x:Name="TotalChatCount"
                                              Text="0"
                                              FontFamily="{StaticResource SarabunBold}"
                                              FontSize="24"
                                              Foreground="{StaticResource PrimaryBrush}"/>
                                    <TextBlock Text="แชททั้งหมด"
                                              FontFamily="{StaticResource SarabunRegular}"
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>

                                <!-- CF -->
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                                    <TextBlock x:Name="CFCount"
                                              Text="0"
                                              FontFamily="{StaticResource SarabunBold}"
                                              FontSize="24"
                                              Foreground="{StaticResource Success}"/>
                                    <TextBlock Text="CF ทั้งหมด"
                                              FontFamily="{StaticResource SarabunRegular}"
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>

                                <!-- ยอดขาย -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,12">
                                    <TextBlock x:Name="TotalSalesText"
                                              Text="฿0"
                                              FontFamily="{StaticResource SarabunBold}"
                                              FontSize="24"
                                              Foreground="{StaticResource Warning}"/>
                                    <TextBlock Text="ยอดขาย"
                                              FontFamily="{StaticResource SarabunRegular}"
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>

                                <!-- ออเดอร์ -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,12">
                                    <TextBlock x:Name="OrderCount"
                                              Text="0"
                                              FontFamily="{StaticResource SarabunBold}"
                                              FontSize="24"
                                              Foreground="{StaticResource SecondaryBrush}"/>
                                    <TextBlock Text="ออเดอร์"
                                              FontFamily="{StaticResource SarabunRegular}"
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>

                                <!-- CF/นาที -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock x:Name="CFPerMinuteText"
                                              Text="0"
                                              FontFamily="{StaticResource SarabunBold}"
                                              FontSize="24"
                                              Foreground="{StaticResource Info}"/>
                                    <TextBlock Text="CF/นาที"
                                              FontFamily="{StaticResource SarabunRegular}"
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>

                                <!-- Duplicate -->
                                <StackPanel Grid.Row="2" Grid.Column="1">
                                    <TextBlock x:Name="DuplicateCount"
                                              Text="0"
                                              FontFamily="{StaticResource SarabunBold}"
                                              FontSize="24"
                                              Foreground="{StaticResource Error}"/>
                                    <TextBlock Text="Duplicate"
                                              FontFamily="{StaticResource SarabunRegular}"
                                              FontSize="11"
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Mobile Connection -->
                    <Border Background="{StaticResource BackgroundDark}"
                           CornerRadius="12"
                           Padding="16"
                           Margin="0,16,0,0">
                        <StackPanel>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <md:PackIcon Kind="CellphoneLink"
                                                Width="20" Height="20"
                                                Foreground="{StaticResource TextSecondary}"
                                                VerticalAlignment="Center"
                                                Margin="0,0,8,0"/>
                                    <TextBlock Text="Mobile App"
                                              FontFamily="{StaticResource SarabunBold}"
                                              FontSize="14"
                                              Foreground="{StaticResource TextPrimary}"/>
                                </StackPanel>

                                <Border x:Name="MobileStatusBadge"
                                       Background="{StaticResource Error}"
                                       CornerRadius="8"
                                       Padding="8,2"
                                       HorizontalAlignment="Right">
                                    <TextBlock x:Name="MobileStatusText"
                                              Text="ไม่ได้เชื่อมต่อ"
                                              FontFamily="{StaticResource SarabunMedium}"
                                              FontSize="10"
                                              Foreground="White"/>
                                </Border>
                            </Grid>

                            <Button x:Name="ShowQRButton"
                                   Style="{StaticResource SecondaryButton}"
                                   Margin="0,12,0,0"
                                   Click="OnShowQRClicked">
                                <StackPanel Orientation="Horizontal">
                                    <md:PackIcon Kind="Qrcode" Width="18" Height="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="แสดง QR Code เชื่อมต่อ"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════ -->
        <!-- Live Chat Preview -->
        <!-- ═══════════════════════════════════════════════════════════════════════ -->
        <Border Grid.Column="1"
               Style="{StaticResource GlassCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Live Chat"
                                  FontFamily="{StaticResource SarabunBold}"
                                  FontSize="18"
                                  Foreground="{StaticResource TextPrimary}"/>
                        <Border Background="{StaticResource PrimaryBrush}"
                               Opacity="0.2"
                               CornerRadius="8"
                               Padding="8,2"
                               Margin="12,0,0,0">
                            <TextBlock x:Name="ChatCountBadge"
                                      Text="0 ข้อความ"
                                      FontFamily="{StaticResource SarabunMedium}"
                                      FontSize="11"
                                      Foreground="{StaticResource PrimaryBrush}"/>
                        </Border>
                    </StackPanel>

                    <!-- Filter Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <RadioButton x:Name="FilterAll"
                                    Content="ทั้งหมด"
                                    Style="{StaticResource NavButton}"
                                    GroupName="ChatFilter"
                                    IsChecked="True"
                                    Padding="12,6"
                                    Margin="0,0,4,0"/>
                        <RadioButton x:Name="FilterCF"
                                    Content="CF Only"
                                    Style="{StaticResource NavButton}"
                                    GroupName="ChatFilter"
                                    Padding="12,6"/>
                    </StackPanel>
                </Grid>

                <!-- Chat Messages List -->
                <ListBox x:Name="ChatListBox"
                        Grid.Row="1"
                        Background="Transparent"
                        BorderThickness="0"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        ScrollViewer.CanContentScroll="True"
                        ItemContainerStyle="{StaticResource GlassListBoxItem}">

                    <!-- Placeholder -->
                    <ListBox.Resources>
                        <Style TargetType="TextBlock" x:Key="PlaceholderStyle">
                            <Setter Property="FontFamily" Value="{StaticResource SarabunRegular}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                        </Style>
                    </ListBox.Resources>

                    <!-- จะมี ItemTemplate เมื่อมีข้อมูลจริง -->

                </ListBox>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <md:PackIcon Kind="ChatOutline"
                                Width="64" Height="64"
                                Foreground="{StaticResource TextDisabled}"
                                HorizontalAlignment="Center"/>
                    <TextBlock Text="ยังไม่มีข้อความแชท"
                              FontFamily="{StaticResource SarabunMedium}"
                              FontSize="16"
                              Foreground="{StaticResource TextSecondary}"
                              HorizontalAlignment="Center"
                              Margin="0,16,0,8"/>
                    <TextBlock Text="เริ่มดึงแชทจาก Facebook/TikTok/LINE เพื่อเริ่มต้น"
                              FontFamily="{StaticResource SarabunRegular}"
                              FontSize="13"
                              Foreground="{StaticResource TextDisabled}"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Page>
