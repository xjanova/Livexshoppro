<!--
═══════════════════════════════════════════════════════════════════════════════
  Live x Shop Pro - Dark Theme
  ธีมสีเข้มหลักของแอพพลิเคชัน พร้อม Glassmorphism Effect
  พัฒนาโดย Xman Studio
═══════════════════════════════════════════════════════════════════════════════
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- สีหลัก (Primary Colors) -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <!-- พื้นหลังหลัก - สีเข้มมาก -->
    <Color x:Key="BackgroundDark">#0D0D15</Color>
    <Color x:Key="BackgroundMedium">#1A1A2E</Color>
    <Color x:Key="BackgroundLight">#252542</Color>

    <!-- พื้นหลังการ์ด -->
    <Color x:Key="CardBackground">#1E1E35</Color>
    <Color x:Key="CardBackgroundHover">#2A2A4A</Color>

    <!-- สี Accent หลัก - ม่วงน้ำเงิน -->
    <Color x:Key="PrimaryAccent">#6C63FF</Color>
    <Color x:Key="PrimaryAccentLight">#8B83FF</Color>
    <Color x:Key="PrimaryAccentDark">#5249E0</Color>

    <!-- สี Secondary - ชมพู/แดง -->
    <Color x:Key="SecondaryAccent">#FF6B9D</Color>
    <Color x:Key="SecondaryAccentLight">#FF8EB5</Color>

    <!-- สี Success/Warning/Error -->
    <Color x:Key="SuccessColor">#4ADE80</Color>
    <Color x:Key="WarningColor">#FBBF24</Color>
    <Color x:Key="ErrorColor">#F87171</Color>
    <Color x:Key="InfoColor">#60A5FA</Color>

    <!-- สีข้อความ -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#A0A0B8</Color>
    <Color x:Key="TextMuted">#6B6B80</Color>

    <!-- สีขอบ -->
    <Color x:Key="BorderColor">#2D2D50</Color>
    <Color x:Key="BorderColorLight">#3D3D60</Color>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SolidColorBrushes -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{StaticResource BackgroundMedium}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="CardBackgroundHoverBrush" Color="{StaticResource CardBackgroundHover}"/>

    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource PrimaryAccent}"/>
    <SolidColorBrush x:Key="PrimaryAccentLightBrush" Color="{StaticResource PrimaryAccentLight}"/>
    <SolidColorBrush x:Key="PrimaryAccentDarkBrush" Color="{StaticResource PrimaryAccentDark}"/>

    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="{StaticResource SecondaryAccent}"/>
    <SolidColorBrush x:Key="SecondaryAccentLightBrush" Color="{StaticResource SecondaryAccentLight}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderColorLight}"/>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- Gradient Brushes -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <!-- Gradient หลักสำหรับปุ่ม -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryAccent}" Offset="0"/>
        <GradientStop Color="{StaticResource SecondaryAccent}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gradient พื้นหลัง -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource BackgroundDark}" Offset="0"/>
        <GradientStop Color="{StaticResource BackgroundMedium}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gradient สำหรับ Glassmorphism -->
    <LinearGradientBrush x:Key="GlassGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#20FFFFFF" Offset="0"/>
        <GradientStop Color="#10FFFFFF" Offset="0.5"/>
        <GradientStop Color="#05FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- Font Family -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <FontFamily x:Key="SarabunFont">pack://application:,,,/Resources/Fonts/#Sarabun</FontFamily>
    <FontFamily x:Key="DefaultFont">Sarabun, Segoe UI, Arial</FontFamily>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- Typography -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <!-- Heading Styles -->
    <Style x:Key="HeadingXLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="HeadingLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="HeadingMedium" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="HeadingSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <!-- Body Styles -->
    <Style x:Key="BodyLarge" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="BodyMedium" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="BodySmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- Effect สำหรับ Glassmorphism -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <DropShadowEffect x:Key="CardShadow"
                      BlurRadius="20"
                      ShadowDepth="5"
                      Direction="270"
                      Color="#000000"
                      Opacity="0.3"/>

    <DropShadowEffect x:Key="CardShadowHover"
                      BlurRadius="30"
                      ShadowDepth="8"
                      Direction="270"
                      Color="#6C63FF"
                      Opacity="0.2"/>

    <DropShadowEffect x:Key="ButtonGlow"
                      BlurRadius="15"
                      ShadowDepth="0"
                      Direction="0"
                      Color="#6C63FF"
                      Opacity="0.5"/>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- Corner Radius -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">12</CornerRadius>
    <CornerRadius x:Key="RadiusXLarge">16</CornerRadius>
    <CornerRadius x:Key="RadiusRound">999</CornerRadius>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- Spacing -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <Thickness x:Key="SpacingXS">4</Thickness>
    <Thickness x:Key="SpacingS">8</Thickness>
    <Thickness x:Key="SpacingM">12</Thickness>
    <Thickness x:Key="SpacingL">16</Thickness>
    <Thickness x:Key="SpacingXL">24</Thickness>
    <Thickness x:Key="SpacingXXL">32</Thickness>

</ResourceDictionary>
